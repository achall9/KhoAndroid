<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_mainLayout"
    tools:context="com.kholabs.khoand.Fragment.ProfileEditFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/pattern_green"
            android:gravity="bottom">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <LinearLayout
                    android:id="@+id/llBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/left" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Back"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Edit Profile"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp" />

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Basic Info"
                            android:textSize="15dp"
                            android:textColor="@color/colorBlack"
                            android:layout_marginBottom="3dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit Basic Profile Information"
                            android:textSize="11dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorDeepGrey"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="20dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ep_name"
                            android:layout_marginRight="20dp"
                            android:layout_gravity="center"/>

                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/light_textfield"
                            android:hint="John"
                            android:paddingLeft="10dp"
                            android:textSize="11dp"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorText"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorDeepGrey"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="20dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ep_phone"
                            android:layout_marginRight="20dp"
                            android:layout_gravity="center"/>

                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/light_textfield"
                            android:hint="Type Your Contact number"
                            android:paddingLeft="10dp"
                            android:textSize="11dp"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorText"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorDeepGrey"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="20dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ep_dob"
                            android:layout_marginRight="20dp"
                            android:layout_gravity="center"/>

                        <EditText
                            android:id="@+id/et_birthday"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/light_textfield"
                            android:hint="16/12/2017"
                            android:inputType="date"
                            android:paddingLeft="10dp"
                            android:textSize="11dp" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorText"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorDeepGrey"
                        android:paddingTop="12dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="12dp"
                        android:paddingRight="20dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ep_email"
                            android:layout_marginRight="20dp"
                            android:layout_gravity="center"/>

                        <EditText
                            android:id="@+id/et_gmail"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/light_textfield"
                            android:hint="john@gmail.com"
                            android:paddingLeft="10dp"
                            android:textSize="11dp"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorText"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorDeepGrey"
                        android:paddingTop="12dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="12dp"
                        android:paddingRight="20dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ep_bio"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="5dp"/>

                        <EditText
                            android:id="@+id/et_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/light_textfield"
                            android:hint=""
                            android:minLines="5"
                            android:paddingLeft="10dp"
                            android:textSize="11dp" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorText"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sports"
                            android:textSize="15dp"
                            android:textColor="@color/colorBlack"
                            android:layout_marginBottom="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add your favorite Sports to your profile"
                            android:textSize="11dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorText"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorDeepGrey"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="20dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ep_sports"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/tvSelectSport"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/light_textfield"
                            android:hint="Select Sports"
                            android:paddingLeft="10dp"
                            android:textSize="11dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorText"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Location"
                                android:textSize="15dp"
                                android:textColor="@color/colorBlack"
                                android:layout_centerVertical="true"
                                />

                            <Switch
                                android:id="@+id/swt_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location is used for Therapists are able to find and answer questions from the local area. Athlete's cannot see your location."
                            android:textSize="11dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorText"/>

                    <RelativeLayout
                        android:id="@+id/rl_therapist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Therapist Info"
                            android:textSize="15dp"
                            android:textColor="@color/colorBlack"
                            android:layout_centerVertical="true"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View"
                            android:textSize="11dp"
                            android:textColor="@color/colorWhite"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:background="@drawable/default_textfield"
                            android:id="@+id/btnTherapistInfo"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorText"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="20dp">

                        <Button
                            android:id="@+id/btnUpdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Update"
                            android:textSize="11dp"
                            android:textColor="@color/colorWhite"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:background="@drawable/default_textfield"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>


                </LinearLayout>


            </ScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"                >
                <DatePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/datePicker"
                    android:background="@color/colorText"
                    android:visibility="gone"></DatePicker>
            </LinearLayout>
        </RelativeLayout>



    </LinearLayout>

</FrameLayout>
