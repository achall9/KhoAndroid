<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_mainLayout"
    tools:context="com.kholabs.khoand.Fragment.TherapistInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="bottom"
            android:background="@drawable/pattern_green">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/llBack"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:src="@drawable/left"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        android:textSize="25dp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorWhite"
                        />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Therapist Info"
                    android:textSize="30dp"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@color/colorPrimary">
                    <ImageView
                        android:id="@+id/iv_verifyMark"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/vf_unverified"
                        android:layout_marginTop="48dp"/>

                    <TextView
                        android:id="@+id/tvVerifyLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Verified"
                        android:textColor="@color/colorWhite"
                        android:textSize="25dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Therapist Information"
                        android:textColor="@color/colorWhite"
                        android:textSize="21dp"
                        android:layout_marginBottom="30dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:background="@color/colorGrey">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Document Verification"
                            android:textSize="25dp"
                            android:textColor="@color/colorWhite"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload an image that we will review to verify your Therapist status"
                        android:textSize="21dp"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorline"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:background="@color/colorGrey">


                    <Button
                        android:id="@+id/btn_upload"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="Upload"
                        android:textSize="21dp"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:background="@drawable/darkbutton"
                        android:layout_centerInParent="true"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorline"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:background="@color/colorGrey">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add any other relevant information that may speed up the verification process"
                        android:textSize="21dp"
                        android:textColor="@color/colorWhite"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"/>

                    <EditText
                        android:id="@+id/et_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="3"
                        android:background="@drawable/darkbutton"
                        android:hint="Type information here..."
                        android:paddingLeft="20dp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="21dp"
                        android:textStyle="italic"
                        android:gravity="top"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorline"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:background="@color/colorGrey">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Therapist Info"
                            android:textSize="24dp"
                            android:textColor="@color/colorWhite"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Knowledgable sports and therapist type"
                        android:textSize="21dp"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorline"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="20dp"
                    android:background="@color/colorGrey">


                    <TextView
                        android:id="@+id/tvSelectSport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Type of Therapist"
                        android:textSize="21dp"
                        android:textColor="@color/colorBlack"
                        android:paddingLeft="16dp"
                        android:paddingTop="10dp"
                        android:background="@drawable/light_textfield"
                        android:layout_centerInParent="true"/>
                </LinearLayout>

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable_list"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/colorGrey"
                    app:el_duration="1000"
                    app:el_expanded="true"
                    app:el_parallax="0.5">
                    <LinearLayout
                        android:id="@+id/llPopup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@color/colorText"
                        android:orientation="vertical">
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/listSports"
                            android:divider="@color/colorGrey1"
                            android:dividerHeight="1.5dip"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior">
                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>

                </net.cachapa.expandablelayout.ExpandableLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorline"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:background="@color/colorGrey">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Office Location"
                            android:textSize="24dp"
                            android:textColor="@color/colorWhite"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This address will be shown on your profile"
                        android:textSize="21dp"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorline"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:background="@color/colorGrey">


                    <EditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address (Street/Number)"
                        android:textSize="21dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/light_textfield"
                        android:layout_centerInParent="true"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorline"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:background="@color/colorGrey">


                    <EditText
                        android:id="@+id/etCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="City (State / Province)"
                        android:textSize="21dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/light_textfield"
                        android:layout_centerInParent="true"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorline"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:background="@color/colorGrey">


                    <EditText
                        android:id="@+id/etCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Country"
                        android:textSize="21dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/light_textfield"
                        android:layout_centerInParent="true"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="30dp"
                    android:background="@color/colorPrimary">


                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="Submit Application"
                        android:textSize="21dp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:background="@drawable/button_apply_round"
                        android:layout_centerInParent="true"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
            <LinearLayout
                android:id="@+id/blurProgLayout"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#9FFFFFFF"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_progtitle"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Uploading Image"
                    android:textColor="@color/colorBlack"
                    android:textSize="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/txt_progwaiting"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="please wait..."
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@android:color/transparent"/>
                <ProgressBar
                    android:id="@+id/progress_uploading"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:max="100"/>
                <Button
                    android:id="@+id/btn_progcancel"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:text="Cancel"
                    android:textColor="@color/colorBlack"
                    android:textAllCaps="false"
                    android:textSize="25dp"
                    android:background="@android:color/transparent" />
            </LinearLayout>
    </RelativeLayout>
</FrameLayout>
