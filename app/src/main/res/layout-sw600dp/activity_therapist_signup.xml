<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.kholabs.khoand.Activity.TherapistSignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="11"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/misc_therapist"
                android:scaleType="fitCenter"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textSize="23dp"
                android:textColor="@color/colorText"
                android:layout_marginLeft="43dp"
                android:layout_marginBottom="15dp"
                />
            <EditText
                android:id="@+id/name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_textfield"
                android:hint="Full Name"
                android:textSize="23dp"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:padding="13dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:singleLine="true"
                android:nextFocusDown="@+id/email_field" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="23dp"
                android:textColor="@color/colorText"
                android:layout_marginLeft="43dp"
                android:layout_marginBottom="15dp"

                />
            <EditText
                android:id="@+id/email_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_textfield"
                android:hint="Email"
                android:textSize="23dp"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:padding="13dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:singleLine="true"
                android:nextFocusDown="@+id/password_field" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="23dp"
                android:textColor="@color/colorText"
                android:layout_marginLeft="43dp"
                android:layout_marginBottom="15dp"

                />
            <EditText
                android:id="@+id/password_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_textfield"
                android:hint="Password"
                android:textSize="23dp"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:padding="13dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:singleLine="true"
                android:nextFocusDown="@+id/confirm_field" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textSize="23dp"
                android:textColor="@color/colorText"
                android:layout_marginLeft="43dp"
                android:layout_marginBottom="15dp"

                />
            <EditText
                android:id="@+id/confirm_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_textfield"
                android:hint="Confirm Password"
                android:textSize="23dp"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:padding="13dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:id="@+id/check_box_and_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkbox_term"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:buttonTint="@color/colorText"
                    android:button="@null"
                    android:background="?android:attr/listChoiceIndicatorMultiple"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/textbox_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:layout_gravity="center"
                    android:textSize="23dp"
                    android:text="  Agree to Terms And Conditions  (Tap to View)"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/therapist"
                android:layout_margin="30dp"
                android:gravity="center"
                android:id="@+id/llSignup">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/misc_sign_up"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete Sign Up"
                    android:textColor="@color/colorWhite"
                    android:layout_marginRight="60dp"
                    android:textSize="23dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
