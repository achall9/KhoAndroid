<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.kholabs.khoand.Activity.AthleteSignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="11"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/misc_athlete"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textSize="13dp"
                android:textColor="@color/colorText"
                android:layout_marginLeft="33dp"
                android:layout_marginBottom="5dp"
                />
            <EditText
                android:id="@+id/name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_textfield"
                android:hint="Full Name"
                android:textSize="13dp"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:padding="13dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:singleLine="true"
                android:nextFocusDown="@+id/email_field" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="13dp"
                android:textColor="@color/colorText"
                android:layout_marginLeft="33dp"
                android:layout_marginBottom="5dp"

                />
            <EditText
                android:id="@+id/email_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_textfield"
                android:hint="Email"
                android:textSize="13dp"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:padding="13dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:singleLine="true"
                android:nextFocusDown="@+id/password_field" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="13dp"
                android:textColor="@color/colorText"
                android:layout_marginLeft="33dp"
                android:layout_marginBottom="5dp"

                />
            <EditText
                android:id="@+id/password_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_textfield"
                android:hint="Password"
                android:textSize="13dp"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:padding="13dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:singleLine="true"
                android:nextFocusDown="@+id/confirm_field" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textSize="13dp"
                android:textColor="@color/colorText"
                android:layout_marginLeft="33dp"
                android:layout_marginBottom="5dp"

                />
            <EditText
                android:id="@+id/confirm_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_textfield"
                android:hint="Confirm Password"
                android:textSize="13dp"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:padding="13dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:id="@+id/check_box_and_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkbox_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorText"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/textbox_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:text="  Agree to Terms And Conditions\n  (Tap to View)"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/therapist"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:id="@+id/llSignup">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/misc_sign_up"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complete Sign Up"
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="60dp"
                        android:textSize="13dp"/>
                </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
